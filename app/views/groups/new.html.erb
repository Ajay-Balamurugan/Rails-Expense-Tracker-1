<div class="pay_container">
<h1>Create a Group</h1>
<%= form_with(model: @group, url: add_group_path, local: true) do |form| %>

  <% if @group.errors.any? %>
        <div class="alert alert-danger">
            <% @group.errors.full_messages.each do |message|%>
                <div><%= message %></div>
            <% end %>
        </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class:"payment_field"%>
  </div>

  <div class="field">
    <%= form.submit "Create Group", class:"btn btn-success"%>
  </div>
  
  <div><%= link_to "Back", root_path, class: "btn btn-dark" %></div>
<% end %>
</div>
